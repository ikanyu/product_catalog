<h1>Edit Category</h1>

<% if @category.errors.any?%>
  <div class="error_explanation">
    <div class="alert alert-danger">
      <% @category.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </div>
  </div>
<% end %>

<%= simple_form_for @category do |f| %>
  <%= f.input :name %>
  <%= f.input :parent_id,
    collection: @category.categories_options_exclude_leaf,
    selected: @category.parent.id
  %>
  <%= f.submit %>
<% end %>
