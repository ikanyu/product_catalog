<h1>Product Catalog</h1>

<div class="row">
  <div class="col-4">
    <%= render partial: "categories_menu", locals: {categories: @categories} %>
  </div>
  <div class="col-8">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Price</th>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "catalog_results", locals: {products: @products} %>
      </tbody>
    </table>
  </div>
</div>

