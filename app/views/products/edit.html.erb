<h1>Edit Product</h1>

<% if @product.errors.any?%>
  <div class="error_explanation">
    <div class="alert alert-danger">
      <% @product.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </div>
  </div>
<% end %>

<%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :category, collection: nested_set_options(Category.all) { |c| "#{'&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;' * c.level} #{c.name}".html_safe }, selected: @product.category.id %>
  <%= f.submit %>
<% end %>

